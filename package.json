{
  "name": "ski-log-electron",
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all -p start:angular dev:electron",
    "dev:electron": "npm run transpile:electron; cross-env NODE_ENV=development electron .",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "start:angular": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/cdk": "20.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ng-icons/core": ">=32.0.0 <34.0.0",
    "@ng-icons/lucide": ">=32.0.0 <34.0.0",
    "@spartan-ng/brain": "^0.0.1-alpha.580",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "rxjs": "~7.8.0",
    "save-dev": "^0.0.1-security",
    "tailwind-merge": "^3.3.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.0",
    "@spartan-ng/cli": "^0.0.1-alpha.580",
    "@tailwindcss/postcss": "^4.1.12",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
